?xml version="1.0" ?>

<robot name="kartman" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:property name="l_width" value="2" />
<xacro:property name="params" value="${load_yaml('urdf_wartosci.yaml')}"/>

    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>

    <material name="green">
        <color rgba="0 1 0 1"/>
    </material>

    <material name="fuchsia">
        <color rgba="1 0 1 1"/>
    </material>


  <link name="base_link">
        <visual>
            <origin rpy="0 0 0" xyz="0.0 0.0 0.5"/>
          <material name="blue"/>
            <geometry>
                <box size="0.25 0.25 1"/>
            </geometry>
        </visual>
    </link>

    <joint name="base_link__link1" type="fixed">
        <axis xyz="0 0 1" />
        <origin rpy="${params['row1']['j_rpy']}" xyz="${params['row1']['j_xyz']}"/>
        <parent link="base_link"/>
        <child link="link1"/>
    </joint>

    <link name="link1">
        <visual>
            <origin rpy="${params['row1']['l_rpy']}" xyz="${params['row1']['l_xyz']}"/>
          <material name="red"/>
            <geometry>
                <cylinder radius="0.1" length="${params['row1']['l_len']}"/>
            </geometry>
        </visual>
    </link>

    <link name="link2">
        <visual>
            <origin rpy="${params['row2']['l_rpy']}" xyz="${params['row2']['l_xyz']}"/>
          <material name="yellow"/>
            <geometry>
                <cylinder radius="0.1" length="${params['row2']['l_len']}"/>
            </geometry>
        </visual>
    </link>



    <joint name="link1__link2" type="fixed">
        <axis xyz="0 0 1" />
        <origin rpy="${params['row2']['j_rpy']}" xyz="${params['row2']['j_xyz']}"/>
        <parent link="link1"/>
        <child link="link2"/>
    </joint>

    <link name="link3">
        <visual>
            <origin rpy="${params['row3']['l_rpy']}" xyz="${params['row3']['l_xyz']}"/>
          <material name="green"/>
            <geometry>
                <cylinder radius="0.1" length="${params['row3']['l_len']}"/>
            </geometry>
        </visual>
    </link>

    <joint name="link2__link3" type="fixed">
        <axis xyz="0 0 1" />
        <origin rpy="${params['row3']['j_rpy']}" xyz="${params['row3']['j_xyz']}"/>
        <parent link="link2"/>
        <child link="link3"/>
    </joint>

    <link name="tool">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
          <material name="fuchsia"/>
            <geometry>
                <box size="0.1 0.1 0.1"/>
            </geometry>
        </visual>
    </link>

    <joint name="link3__tool" type="fixed">
        <axis xyz="0 0 1" />
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <parent link="link3"/>
        <child link="tool"/>
    </joint>
</robot>